{
    "extends": [
        "airbnb",
        "prettier",
        "plugin:node/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "plugins": [
        "prettier"
    ],
    "rules": {
        "semi": [
            "off",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "spaced-comment": "off",
        "no-console": "warn",
        "consistent-return": "off",
        "func-names": "off",
        "object-shorthand": "off",
        "no-process-exit": "off",
        "no-param-reassign": "off",
        "no-return-await": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "arrow-body-style": [
            "error",
            "always"
        ],
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "req|res|next|val"
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true
    }
}